{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.1",
    "johnpbloch/wordpress": "5.0.3",
    "wpackagist-plugin/classic-editor": "1.3"
  },
  "extra": {
    "wordpress-install-dir": "www/wp",
    "installer-paths": {
      "www/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ]
    }
  }
}
